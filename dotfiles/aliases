# run common dockers commands
alias rails='docker exec -it workspace_${PWD##*/}_1 bundle exec rails'
alias rspec='docker exec -it workspace_${PWD##*/}_1 bundle exec rspec'
alias runin='docker exec -it workspace_${PWD##*/}_1'

# attach
alias dattach='docker attach --detach-keys ctrl-x workspace_${PWD##*/}_1'

# xD
alias :q='exit'
alias bim='nvim'
alias vim='nvim'

#docker compose aliases
alias dcup='docker-compose -f /root/workspace/docker-compose.yml up -d'
alias dcstart='docker-compose -f /root/workspace/docker-compose.yml start'
alias dcstop='docker-compose -f /root/workspace/docker-compose.yml stop'
alias dps='docker ps --format '\''table {{.ID}}\t{{.Image}}\t{{.Status}}'\'

#git without space
alias gs='g s'
alias gcm='g cm'
alias gco='g co'
alias gca='g cm'
alias gps='g ps'
alias gfps='g ps'
alias gpl='g pl'
alias gl='g l'
